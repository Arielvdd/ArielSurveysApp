<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:background="#F5F5F5">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teacher Dashboard"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnViewUsers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View Users"
        android:textSize="16sp"
        android:backgroundTint="#6200EE"
        android:textColor="#FFFFFF"
        android:paddingVertical="12dp"
        android:elevation="4dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnViewSurveys"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View Surveys"
        android:textSize="16sp"
        android:backgroundTint="#03A9F4"
        android:textColor="#FFFFFF"
        android:paddingVertical="12dp"
        android:elevation="4dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnViewUsers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnCreateSurvey"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Create New Survey"
        android:textSize="16sp"
        android:backgroundTint="#FF9800"
        android:textColor="#FFFFFF"
        android:paddingVertical="12dp"
        android:elevation="4dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnViewSurveys"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
